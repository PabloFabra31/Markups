# State-owned firms
govt.firms = data.cleaned %>%
  filter(grepl(paste(c("GOVT","GOVERNMENT","COMUNIDAD","MANCOMUNIDAD",
                       "AYUNTAMIENTO","AREA METROPOLITANA",
                       "GENERALITAT","GOBIERNO","JUNTA DE",
                       "XUNTA DE"),collapse="|"),GUO...Nombre)) %>%
  distinct(NÃƒÂºmero.BvD) %>% pull()

# Remove sectors 
# farm, financial and non-business sector (1-3 -> A, 64-66 -> K, 84-99 -> O,P,Q,R,S,T,U)
# mining, petroleum and utilities (6-9 -> B, 19, 35 -> D, 36-39 -> E)
digit2.nace = c(1:3,6:9,19,35,36:39,64:66,84:99) 
digit4.nace = c(4612,4671,4950) # Petroleum related
nace.codes = data.cleaned %>% filter(CÃƒÂ³digo.primario.NACE.Rev..2 %in% digit4.nace | nace2 %in% digit2.nace) %>% 
  distinct(NÃƒÂºmero.BvD) %>% pull()

# Remove firms owned by oil, energy and financial companies
guo.firms = data.cleaned %>% distinct(Nombre,NÃƒÂºmero.BvD,GUO...Nombre,
                                      GUO...NÃƒÂºmero.de.identificaciÃƒÂ³n.BvD,CÃƒÂ³digo.primario.NACE.Rev..2) %>% 
  filter(!(nchar(GUO...NÃƒÂºmero.de.identificaciÃƒÂ³n.BvD) == 1 | NÃƒÂºmero.BvD == GUO...NÃƒÂºmero.de.identificaciÃƒÂ³n.BvD)) %>% 
  purrr::set_names("name.af","id.af","name.parent","NÃƒÂºmero.BvD","nace.af") %>% 
  left_join(data.cleaned %>% distinct(NÃƒÂºmero.BvD,CÃƒÂ³digo.primario.NACE.Rev..2), by="NÃƒÂºmero.BvD") %>% 
  rename(nace.parent = CÃƒÂ³digo.primario.NACE.Rev..2) %>% na.omit() %>% 
  filter(nace.parent %in% c(4612,4671,4950,3511:3523,6400:6699)) %>% pull(id.af)

# Additional firms 
guos = c("BANCO SANTANDER SA","BANCO BILBAO VIZCAYA ARGENTARIA SOCIEDAD ANONIMA","BANCO DE SABADELL SA",
         "UNICAJA BANCO SA.","CAIXABANK SA","REPSOL SA.") # Banks are not included in SABI and REPSOL has NACE code 7010
add.firms = data.cleaned %>% filter(GUO...Nombre %in% guos | 
                                    NÃƒÂºmero.BvD %in% c("ESA28718435","ESA28033207","ESA28800894")) %>% #RTVE and REPSOL's affiliates
  distinct(NÃƒÂºmero.BvD) %>% pull()

# Restrict to Corporations, Limited Liability Companies and cooperatives
legal.forms.list = data.cleaned %>% select(NÃƒÂºmero.BvD,Forma.jurÃƒÂ­dica.detallada) %>% 
  mutate(form = gsub('[[:digit:]]+','',NÃƒÂºmero.BvD)) %>% filter(form %in% c("ESA","ESB","ESF")) %>% 
  distinct(Forma.jurÃƒÂ­dica.detallada) %>% na.omit() %>% arrange(Forma.jurÃƒÂ­dica.detallada) %>% 
  mutate(id = seq(n())) %>% filter(id %in% c(5,12:20,23:27,29:31,39,44:45)) %>% pull(Forma.jurÃƒÂ­dica.detallada)

legal.form = data.cleaned %>% filter(! Forma.jurÃƒÂ­dica.detallada %in% legal.forms.list) %>% 
  distinct(NÃƒÂºmero.BvD) %>% pull()

# Micro firms
micro.firms = data.cleaned %>% group_by(NÃƒÂºmero.BvD) %>% mutate(emp = round(mean(NÃƒÂºmero.empleados,na.rm=T))) %>% 
  ungroup() %>% distinct(NÃƒÂºmero.BvD,emp) %>% filter(emp < 10) %>% pull(NÃƒÂºmero.BvD)

# Remove firms
rm.firms.b = data.frame(NÃƒÂºmero.BvD = c(govt.firms,nace.codes,add.firms,guo.firms,legal.form,micro.firms)) %>% 
  distinct(NÃƒÂºmero.BvD) %>% pull()

data.selected = data.cleaned %>% filter(time %in% 1996:2020 & ! (NÃƒÂºmero.BvD %in% rm.firms.b)) %>% 
  select(NÃƒÂºmero.BvD,Nombre,time,nace2,nace3,CÃƒÂ³digo.primario.NACE.Rev..2,age,Comunidad.autÃƒÂ³noma,
         Ingresos.de.explotaciÃƒÂ³n,NÃƒÂºmero.empleados,Inmovilizado.material,Inmovilizado.inmaterial,
         Gastos.de.personal,Materiales,Dotaciones.para.amortiz..de.inmovil.)

# ---------------------------------------------------------------------------------------- #
# Construct variables
# ---------------------------------------------------------------------------------------- #
load("C:/Users/User/Downloads/data_tfg.RData")
install.packages(c("tidyverse", "vctrs", "lubridate", "zoo"))
install.packages("languageserver")

data.vars = data.selected %>% 
  mutate(k = ifelse(is.na(Inmovilizado.material) & is.na(Inmovilizado.inmaterial), NA,
                    rowSums(cbind(Inmovilizado.material,Inmovilizado.inmaterial), na.rm = T)), va = Ingresos.de.explotaciÃ³n-Materiales) %>%
  group_by(NÃºmero.BvD) %>% mutate(i = k-lag(k)+Dotaciones.para.amortiz..de.inmovil., delta = Dotaciones.para.amortiz..de.inmovil./(Dotaciones.para.amortiz..de.inmovil.+lag(k))) %>% ungroup() %>%
  left_join(sectors.def, by = c("nace2")) %>% left_join(deflators,by=c("nace2","time")) %>% left_join(macro, by ="time") %>%
  mutate(go.const = Ingresos.de.explotaciÃ³n/va.def, va.const = va/va.def, bill.const = Gastos.de.personal/cpi, m.const = Materiales/va.def,
         k.const = k/k.def, i.const = i/k.def) %>% group_by(NÃºmero.BvD) %>%
  mutate(k.pim = (1-delta)*lag(k.const)+i.const, k.pim = ifelse(row_number()==1, k.const, k.pim)) %>% ungroup() %>%
  select(NÃºmero.BvD,Nombre,time,nace3,nace2,age,go.const,va.const,bill.const,m.const,k.const,k.pim,NÃºmero.empleados,gdp, i.const,Comunidad.autÃ³noma) %>%
  purrr::set_names("id","name","time","nace3","nace2","age","go","va","bill","m","k","k_pim","emp","gdp", "i","Comautonoma")


data.vars <- data.vars %>%purrr::set_names("id","name","time","nace3","nace2","age","go","va","bill","m","k","k_pim","emp","gdp","Comautonoma")


